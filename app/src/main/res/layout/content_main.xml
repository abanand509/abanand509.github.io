<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.elanic.elanicanandab.view.activity.QuestionSearchActivity"
    tools:showIn="@layout/activity_main">

    <!--Recycler view for questions list-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_question_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Text messages-->

    <TextView
        android:id="@+id/tv_no_content_available"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/no_content_toast"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:visibility="gone" />


</android.support.constraint.ConstraintLayout>